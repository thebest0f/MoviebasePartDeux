@model IEnumerable<MoviebasePartDeux.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.MovieName</h2>


<table class="table">
    <tr>
        <th>
            <h4>Genre</h4>
        </th>
        <th>
            <h4>Director</h4>
        </th>
        <th>
            <h4>Year</h4>
        </th>
        <th>
            <h4>Description</h4>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.GenreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MovieDirector)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MovieYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MovieDesc)
        </td>
    </tr>
}

</table>
